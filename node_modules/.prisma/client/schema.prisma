generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  type         String
  subtype      String?
  description  String?
  imageUrl     String?
  imageId      String?
  price        String
  availability Boolean
  priceForTwo  String?

  @@map("products")
}

model Wine {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  glassPrice   Float
  bottlePrice  Float
  imageUrl     String
  imageId      String
  country      String
  availability Boolean
  updateTimes  Int

  @@map("wines")
}

model Admin {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  password    String
  accountType String

  @@map("admins")
}
